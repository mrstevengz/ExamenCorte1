Proceso convergb
    // Definir 
    definir Kilob Como real;
    definir giga como real;
	Definir conver Como real;
    // Solicitar al usuario que ingrese los kilobytes
    Escribir "Ingrese la cantidad de kilobytes:";
    Leer kilob;
	
    // Calcular los gigabytes
	conver<-1000000.0;
    giga <- kilob /conver;
	
    Escribir "El equivalente en gigabytes es:";
	Escribir giga;
	
FinAlgoritmo
